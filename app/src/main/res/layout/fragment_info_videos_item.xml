<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_messenger_item_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/MyToolbarStyle"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        app:title="@string/all_videos_toolbar_title">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_action_share_white" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:foregroundGravity="bottom"
                android:src="@drawable/ic_action_edit_white" />
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/edit_messenger_item_logo"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/ic_play_video_item"
        tools:background="@color/black" />


    <TextView
        android:id="@+id/edit_video_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="@string/text_placeholder_for_tools" />

    <TextView
        android:id="@+id/edit_video_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="@string/text_placeholder_for_tools" />

    <TextView
        android:id="@+id/edit_video_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="2"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="@string/text_placeholder_for_tools" />
</LinearLayout>