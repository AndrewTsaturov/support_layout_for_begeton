<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_enums_bottoms_sheet</item>
    </style>


    <style name="BegetonTextInput">
       <item name="inputTextColor">@color/ref_black</item>
       <item name="descriptionTextColor">@color/text_grey</item>
       <item name="defaultBoxColor">@color/text_grey</item>
       <item name="focusedBoxColor">@color/colorPrimary</item>
       <item name="errorColor">@color/ref_red_ui</item>
       <item name="defaultBoxLineWidth">1dp</item>
       <item name="focusedBoxLineWidth">2dp</item>
       <item name="errorBoxLineWidth">2dp</item>
       <item name="boxCornerRadius">4dp</item>
       <item name="errorIcon">@drawable/ic_error_24_px</item>
       <item name="textIndicatorBackgroundColor">@android:color/white</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>

    <style name="WorkTimeText">
        <item name="android:textColor">@color/text_work_time</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="WorkTimeTextValue" parent="WorkTimeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WorkTimeGreenDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="OutlineInputBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/ref_white</item>
        <item name="backgroundColor">@color/ref_white</item>
        <item name="backgroundTint">@color/ref_white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="GrayDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorFatDivider</item>
    </style>

    <style name="GrayFatDivider" parent="GrayDivider">
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="OutlineInputBoxDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/ref_black_light</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="backgroundTint">@color/ref_black_light</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/ref_green</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="windowActionModeOverlay">false</item>
    </style>

    <style name="HomeToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="iconTint">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="colorAccent">@color/ref_white</item>
        <item name="windowActionModeOverlay">false</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="cusToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <!--default is 56dp-->
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="cusToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <!--default 4dp-->
        <item name="titleMargin">4dp</item>
        <!--default @dimen/abc_action_bar_content_inset_with_nav-->
        <item name="contentInsetStartWithNavigation">4dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="myTextInputLayout">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="registrationTextInputLayout">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="fastUpdateHeader">
        <item name="android:textColor">@color/ref_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fastUpdate">
        <item name="android:textColor">@color/ref_black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSelectHandle">@drawable/ic_drop</item>
        <item name="android:textSelectHandleRight">@drawable/ic_drop</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_drop</item>
    </style>

</resources>
